<h1><%= t('views.edit.title') %></h1>
<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div style="margin-bottom: 10px;">
    <div><%= form.label t('activerecord.attributes.task.title') %></div>
    <div><%= form.text_field :title %></div>
  </div>
  <div style="margin-bottom: 10px;">
    <div><%= form.label t('activerecord.attributes.task.content') %></div>
    <div><%= form.text_area :content %></div>
  </div>
  <div style="margin-bottom: 10px;"><%= form.submit id: "update-user" %></div>
<% end %>
<%= link_to t('helpers.links.back'), tasks_path, id: "back" %>
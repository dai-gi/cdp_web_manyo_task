<h1><%= t('.title') %></h1>
<%= form_with(model: @task, local: true) do |form| %>
  <div><%= form.label :title %></div>
  <div><%= form.text_field :title %></div>
  <div><%= form.label :content %></div>
  <div><%= form.text_area :content %></div>
  <div><%= form.submit id: "update-user" %></div>
<% end %>
<%= link_to t('common.back'), tasks_path, id: "back" %>
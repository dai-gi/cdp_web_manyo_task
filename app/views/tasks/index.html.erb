<h1><%= t('views.index.title') %></h1>
<%= form_with(scope: :search, url: tasks_path, method: :get, local: true) do |form| %>
  <div style="margin-bottom: 10px;">
    <div>
      <%= form.label t('activerecord.attributes.task.status') %>
      <span><%= form.select :status, ['完了', '着手中', '未着手'], { include_blank: ' ' } %></span>
    </div>
    <div>
      <%= form.label t('activerecord.attributes.task.title') %>
      <span><%= form.text_field :title %></span>
    </div>
  </div>
  <div style="margin-bottom: 10px;"><%= form.submit id: "create-task" %></div>
<% end %>
<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.task.title') %></th>
      <th><%= t('activerecord.attributes.task.content') %></th>
      <th><%= t('activerecord.attributes.task.created_at') %></th>
      <th><%= link_to t('activerecord.attributes.task.deadline_on'), sort_deadline_on: true %></th>
      <th><%= link_to t('activerecord.attributes.task.priority'), sort_priority: true %></th>
      <th><%= t('activerecord.attributes.task.status') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.set_date %></td>
        <td><%= task.set_deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to t('helpers.links.show'), task, id: "show-task" %></td>
        <td><%= link_to t('helpers.links.edit'), edit_task_path(task), id: "edit-task" %></td>
        <td><%= link_to t('helpers.links.destroy'), task_path(task), method: :delete, data: {confirm: t('activerecord.attributes.task.confirm_destroy')}, id: "destroy-task" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
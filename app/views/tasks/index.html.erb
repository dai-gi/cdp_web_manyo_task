<h1><%= t('.title') %></h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Created_at</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to t('common.show'), task %></td>
        <td><%= link_to t('common.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('common.destroy'), task_path(task), method: :delete, id: "destroy-task" %></td>
      </tr>
    <% end %>
  </tbody>
</table>